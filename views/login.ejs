<%-include("partials/header") %>
<div class = "loadingSubmit">
    <img src = "assests/infinityloader.gif"  alt = "img" />
    <p>Checking Your Identity.....</p>
</div>
<div class = "container">
    <form class="form-signin" method="post" action="/login" onsubmit="loginLoading()">
        <h2 class="form-signin-heading">Log in</h2>
        <label for="inputEmail" class="sr-only">Email address</label>
        <input type="email" id="inputEmail" name="email" class="form-control" placeholder="Email address" required autofocus autocomplete="off">
        <label for="inputPassword" class="sr-only">Password</label>
        <input type="password" id="inputPassword" name="password" class="form-control" placeholder="Password" required autocomplete="off">
        <div class="checkbox">
            <label>
        <input type="checkbox" value="remember-me"> Remember me
      </label>
        </div>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Log  in</button>
        <a href = "/confirmemailforpassword">Forgot Password</a>
    </form>

    </div>
    <script src = "scripts/loginloader.js"></script>
    </body>

    </html>